<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    tools:text="Alejandro"/>
                <TextView
                    android:id="@+id/contact_surname"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    tools:text="BerdÃºn"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/contact_dni"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/color_light_black"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    tools:text="458974667E"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/color_light_black"
                    android:gravity="start"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textAlignment="textStart"
                    android:text="|"/>
                <TextView
                    android:id="@+id/contact_genere"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/color_light_black"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    tools:text="Home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/color_light_black"
                    android:gravity="start"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textAlignment="textStart"
                    android:text="|"/>
                <TextView
                    android:id="@+id/contact_data_naixement"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/color_light_black"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    tools:text="23 anys"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/edit_button"
                app:backgroundTint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_edit_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/delete_button"
                app:backgroundTint="@color/color_red_remove"
                app:srcCompat="@drawable/ic_delete_forever_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>